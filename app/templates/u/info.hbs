
<button class="ui black button" {{action "copy"}}><i class="copy icon"></i> Copy social-url to clipboard</button> <br><br>
{{#each model.socials as |social|}}
  <div class="ui middle aligned divided list">
    <div class="item">
      <div class="right floated content">
        <div class="ui basic button">
          <a href={{social.url}} style="cursor: pointer" target="_blank" rel="noopener">Visit</a>
        </div>
      </div>
      <img class="ui avatar image" src={{social.image}}>
      <div class="content">
        {{social.name}}
      </div>
    </div>
  </div>
{{/each}}